{
  "name": "r2",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "main": "electron/main.ts",
  "scripts": {
    "dev": "vite",
    "dev:electron": "NODE_ENV=development electron .",
    "build": "tsc -b && vite build",
    "build:electron": "tsc -b && vite build && electron-builder",
    "lint": "eslint .",
    "preview": "vite preview",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && NODE_ENV=development electron .\"",
    "electron:build": "npm run build && electron-builder"
  },
  "dependencies": {
    "jszip": "^3.10.1",
    "lucide-react": "^0.546.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-dropzone": "^14.3.5"
  },
  "devDependencies": {
    "@babel/core": "^7.28.4",
    "@cloudflare/workers-types": "^4.20240208.0",
    "@eslint/js": "^9.13.0",
    "@types/node": "^22.10.0",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.3",
    "concurrently": "^8.2.2",
    "electron": "^38.3.0",
    "electron-builder": "^25.0.0",
    "esbuild": "^0.25.10",
    "eslint": "^9.36.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.14",
    "globals": "^16.4.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.11.0",
    "vite": "^5.4.20",
    "wait-on": "^7.2.0",
    "wrangler": "^4.40.3"
  },
  "overrides": {
    "esbuild": "^0.25.10"
  },
  "build": {
    "appId": "com.r2manager.app",
    "productName": "R2 Manager",
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    }
  }
}
